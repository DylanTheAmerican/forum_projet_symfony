{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block blockh1 %}

    <h1>INSCRIPTION</h1>

{% endblock %}

{% block body %}

<div class="flex-form">
    <div class="container-form">
        <h1>Inscription</h1>

        {{ form_start(registrationForm) }}

        <fieldset class="fieldset-form">
            <legend> Mon identité </legend>
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.email) }}  
        </fieldset>
        
        <fieldset class="fieldset-form">
            <legend> Mes coordonnées </legend>
            {{ form_row(registrationForm.address) }}
            {{ form_row(registrationForm.postalcode) }}
            {{ form_row(registrationForm.city) }}
            {{ form_row(registrationForm.phonenumber) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
        </fieldset>

        <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez vous</a></p>

            <button type="submit" class="form-button">Inscription</button>
        {{ form_end(registrationForm) }}
    </div>
</div>

{% endblock %}
